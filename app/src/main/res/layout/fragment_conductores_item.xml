<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="20dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fci_txt_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Cesar Willy Mamani Canaza"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fci_txt_celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="960601310"
        android:textColor="#000"
        android:drawableStart="@drawable/ic_local_phone_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fci_txt_nombre" />

    <TextView
        android:id="@+id/fci_txt_dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="70321701"
        app:layout_constraintStart_toEndOf="@+id/fci_txt_celular"
        app:layout_constraintTop_toBottomOf="@+id/fci_txt_nombre" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ver detalles"
        android:textColor="#fff"
        android:gravity="end"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fci_txt_dni"
        app:layout_constraintTop_toBottomOf="@+id/fci_txt_nombre" />
</androidx.constraintlayout.widget.ConstraintLayout>