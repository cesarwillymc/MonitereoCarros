<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/lbl_conductor_item_parte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edwin Torres Gutierrez"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/lbl_placa_item_parte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XYZ-123"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_conductor_item_parte" />

            <TextView

                android:textColor="#fff"
                android:background="#000"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/lbl_model_item_parte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota Hilux"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_placa_item_parte" />

            <TextView
                android:id="@+id/estadoParte"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@color/rojo"
                android:text="No Aceptado"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>